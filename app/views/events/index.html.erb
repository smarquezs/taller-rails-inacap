<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Title slug</th>
      <th>Published date</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.title_slug %></td>
        <td><%= event.published_date %></td>
        <td><%= event.author %></td>
        <td><%= link_to 'Show', show_events_path(site: site, id: event.id, title: event.title_slug) %></td>
        <td><%= link_to 'Edit', edit_event_path(site: site, id: event.id) %></td>
        <td><%#= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path(site: site) %>
